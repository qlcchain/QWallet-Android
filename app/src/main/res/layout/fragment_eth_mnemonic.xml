<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/x35">
        <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="@dimen/x242"
            android:orientation="vertical"
            android:layout_height="@dimen/x242">
            <EditText
                android:id="@+id/etMnemonic"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/x20"
                android:gravity="left"
                android:textSize="14sp"
                android:background="@null"
                android:hint="@string/please_use_space_to_separate_the_mnemonic_words"
                android:layout_height="@dimen/x160" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/tvWhatsMnemonic"
                android:layout_width="wrap_content"
                android:text="What is a mnemonic?"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginBottom="@dimen/x20"
                android:textColor="@color/mainColor"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/llEthType"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginTop="@dimen/x80"
        android:layout_marginRight="@dimen/x45"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/retrieve_the_path"
            android:textColor="@color/color_1F314A"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvEthType"
            android:layout_width="wrap_content"
            android:text="m/44'/60'/0'/0/0"
            android:textColor="@color/color_1F314A"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_height="wrap_content" />
    </LinearLayout>

