<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_asset_tip"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x10"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x60"
            android:src="@mipmap/icon_amount_of_qlc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/image"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_regular_q"
            android:text="@string/Your_Registed_Assets"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/earn"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_regular_q"
            android:text="@string/Value"
            android:layout_marginRight="@dimen/x80"
            />

        <TextView
            android:id="@+id/earn"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x80"
            android:gravity="center"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_regular_q"
            android:text="@string/Earnings"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<android.support.v4.widget.SwipeRefreshLayout-->
            <!--android:id="@+id/refreshLayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        <!--</android.support.v4.widget.SwipeRefreshLayout>-->
        <LinearLayout
            android:id="@+id/ll_no_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/You_have_no_registered_assets"
                android:textColor="#333"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_regular_q"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>