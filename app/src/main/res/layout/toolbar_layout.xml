<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_rl"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/navigation_shape">

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:textColor="@color/color_333"
        android:textSize="9sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/view"
        android:navigationIcon="@mipmap/icon_back"
        android:titleTextColor="@color/white"
        app:navigationIcon="@mipmap/icon_back">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_below="@+id/view"
        android:layout_centerInParent="true"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="@dimen/x60"
        android:src="@mipmap/refresh_black"
        android:layout_marginRight="@dimen/x85"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/x60"/>


    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/x55"
        android:src="@mipmap/close_t"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/x5"
        android:layout_marginRight="@dimen/x15"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/x55"/>

</RelativeLayout>