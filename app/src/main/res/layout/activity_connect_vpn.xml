<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x70"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user_avater"
            android:layout_width="@dimen/x76"
            android:layout_marginLeft="@dimen/x42"
            android:src="@mipmap/icon_default"
            android:layout_height="@dimen/x76" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vpn"
            android:letterSpacing="0.1"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="@dimen/x76"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x42"
            android:layout_marginLeft="@dimen/x42"
            android:src="@mipmap/icon_default"
            android:layout_height="@dimen/x76" />
    </RelativeLayout>

    <TextView
        android:id="@+id/remove_all_profile"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x25"
        android:background="@drawable/tablayout_background"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:textSize="13sp"
        android:text="@string/CONNECT_TO_VPN_SERVER"
        android:textColor="@color/white"
        android:layout_height="@dimen/x80" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x78"
                android:layout_marginTop="@dimen/x50"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/x78"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/VPN_Name"
                    android:textSize="13sp"
                    android:textColor="@color/color_40ffffff" />
                <TextView
                    android:id="@+id/tv_ssid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="@string/ssid"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginLeft="@dimen/x78"
                android:layout_marginRight="@dimen/x78"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Country"
                        android:textSize="13sp"
                        android:textColor="@color/color_40ffffff" />
                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Continent"
                        android:textSize="13sp"
                        android:textColor="@color/color_40ffffff" />
                    <TextView
                        android:id="@+id/tv_continent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x35"
                android:layout_marginLeft="@dimen/x78"
                android:layout_marginRight="@dimen/x78"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/IP_Address"
                        android:textSize="13sp"
                        android:textColor="@color/color_40ffffff" />
                    <TextView
                        android:id="@+id/tv_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Band_Width"
                        android:textSize="13sp"
                        android:textColor="@color/color_40ffffff" />
                    <TextView
                        android:id="@+id/tv_band_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x50"
                android:src="@mipmap/tab_checked"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_height="@dimen/dp_10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginLeft="@dimen/x78"
                android:layout_marginRight="@dimen/x78"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Price"
                        android:textSize="13sp"
                        android:textColor="@color/color_40ffffff" />
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Devices_Connected"
                        android:textSize="13sp"
                        android:textColor="@color/color_40ffffff" />
                    <TextView
                        android:id="@+id/tv_connect_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="1/10"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x45"
                android:src="@mipmap/tab_checked"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_height="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x70"
                android:layout_marginRight="@dimen/x70"
                android:layout_height="wrap_content"
                android:letterSpacing="0.2"
                android:text="@string/DO_YOU_WANT_TO_CONNECT_TO_THIS_VPN"
                android:layout_marginTop="@dimen/x50"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/x35"
                android:layout_marginLeft="@dimen/x38"
                android:layout_marginRight="@dimen/x38"
                android:layout_height="80dp">
                <Button
                    android:id="@+id/bt_cancal"
                    android:layout_width="@dimen/x315"
                    android:text="@string/cancel"
                    android:textSize="12sp"
                    android:background="@drawable/cancal_button_bg"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/x85" />
                <Button
                    android:id="@+id/bt_connect"
                    android:layout_width="@dimen/x315"
                    android:layout_marginLeft="@dimen/x15"
                    android:textSize="12sp"
                    android:background="@drawable/comfirm_button_bg"
                    android:text="@string/yes_connect"
                    android:textColor="@color/mainColor"
                    android:layout_height="@dimen/x85" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>